<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
		 width="100%" height="100%">
	
	<fx:Metadata>
		[Event(name="speakerChange", type="au.com.cfobjective.events.SpeakerEvent")]		
	</fx:Metadata>
	
	<fx:Script>
		<![CDATA[
			import au.com.cfobjective.events.SessionEvent;
			import au.com.cfobjective.events.SpeakerEvent;
			import au.com.cfobjective.model.Speaker;
			
			import mx.collections.ArrayCollection;
			
			[Bindable] public var speakers:ArrayCollection;
			
			protected function changeSpeaker(speaker:Speaker):void {
				var event:SpeakerEvent = new SpeakerEvent(SpeakerEvent.CHANGE, speaker);
				
				dispatchEvent(event);
			}
		]]>
	</fx:Script>
	
	<s:List id="speakerList" dataProvider="{speakers}" labelField="name" change="changeSpeaker(speakerList.selectedItem)" height="100%" width="100%" />
</s:Group>
