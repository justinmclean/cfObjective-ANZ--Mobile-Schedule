<?xml version="1.0" encoding="utf-8"?>
<s:View xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark" xmlns:views="au.com.cfobjective.views.*" xmlns:components="au.com.cfobjective.components.*"
		title="Speakers">
	
	<fx:Script>
		<![CDATA[
			import au.com.cfobjective.events.SpeakerEvent;
			
			import mx.collections.ArrayCollection;
			
			protected function showSpeaker(event:SpeakerEvent):void {
				navigator.pushView(SpeakerView, event.speaker);
			}
		]]>
	</fx:Script>

	<components:SpeakersDisplay speakers="{data as ArrayCollection}" speakerChange="showSpeaker(event)" />
</s:View>
